{
    "env": {
      "browser": false,
      "node": true, // Enable Node.js global variables like 'require' and 'module'
      "es2021": true,
      "mocha": true // Add this if you're using Mocha for testing
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "indent": ["error", 2],
      "linebreak-style": ["error", "unix"],
      "quotes": ["error", "single"],
      "semi": ["error", "always"]
    }
  }
  